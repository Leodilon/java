package streams;

import java.util.Arrays;
import java.util.List;
import java.util.function.Consumer;
import java.util.function.UnaryOperator;

public class Map {

	public static void main(String[] args) {
		
		Consumer<String> print = System.out::print;
		
		List<String> marcas = Arrays.asList("Bmw ", "Honda ", "Audi");
		
		//stream cria o processo, map é o intermediario e pode ser adicionado quantos fores necessarios
		//foreach finaliza o processo
		marcas.stream().map(m -> m.toUpperCase()).forEach(print); 
		
		UnaryOperator<String> maiuscula = n -> n.toUpperCase();
		UnaryOperator<String> primeita = n -> n.charAt(0) + "";
		UnaryOperator<String> grito = n -> n + "!!! ";
		
		System.out.println("\n\nUsando composição");
		
		marcas.stream()
			.map(maiuscula)
			.map(primeita)
			.forEach(print);
	}
}
